<% @books.each do |book| %>
<% @book = book %>
<%= render :partial => 'book', :lokals => {:is_remote => true} %>
<% end %>

<%= will_paginate @books %>
<% if can? :cud, @book %>
<%= button_to t('.new', :default => t("helpers.links.new")),
            new_book_path,
            :method => :get,
            :class => 'btn btn-primary' %>
<% end %>